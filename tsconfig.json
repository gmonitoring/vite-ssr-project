{
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "db/*": ["db/*"],
      "public/*": ["public/*"],
      "dist/*": ["dist/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["dist", "**/*.ts", "**/*.tsx", "src/vite-env.d"],
  "exclude": ["./node_modules"]
}
